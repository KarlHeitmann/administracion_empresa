<div class="text-xl font-medium text-black">Empleados</div>

<table class="table-fixed">
  <thead>
    <tr>
      <td class="w-1/2">Nombre</td>
      <td class="w-1/4">Foto</td>
      <td class="w-1/4">Email</td>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr class="bg-emerald-200">
        <td><%= employee.name %></td>
        <td><%= image_tag employee.picture, size: "64x64" %></td>
        <td><%= employee.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
