<p id="notice"><%= notice %></p>

<h1>Tasks</h1>
<div class="flex flex-col">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Content</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th colspan="3" scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
            </tr>
          </thead>

          <tbody class="bg-white divide-y divide-gray-200">
            <% @tasks.each do |task| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap"><%= task.title %></td>
                <td class="px-6 py-4 whitespace-nowrap"><%= task.content %></td>
                <td class="px-6 py-4 whitespace-nowrap"><%= task.status %></td>
                <td class="px-6 py-4 whitespace-nowrap"><%= link_to 'Show', task %></td>
                <td class="px-6 py-4 whitespace-nowrap"><%= link_to 'Edit', edit_task_path(task) %></td>
                <td class="px-6 py-4 whitespace-nowrap"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-red' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div id="task-new" class="my-5" >
  <%= link_to 'New Task', new_task_path, remote: true, class: "btn-indigo" %>
</div>
