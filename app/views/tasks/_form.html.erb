<div class="mt-10 sm:mt-0">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="mt-5 md:mt-0 md:col-span-2">
      <%= form_with(model: task, local: false) do |form| %>
        <div class="shadow overflow-hidden sm:rounded-md">
          <div class="px-4 py-5 bg-white sm:p-6">
            <div class="grid grid-cols-6 gap-6">
              <% if task.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

                  <ul>
                    <% task.errors.each do |error| %>
                      <li><%= error.full_message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="col-span-6">
                <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
                <%= form.text_field :title, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              </div>

              <div class="col-span-6">
                <%= form.label :content, class: "block text-sm font-medium text-gray-700" %>
                <%= form.text_area :content, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              </div>

              <div class="col-span-6">
                <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
                <%= form.number_field :status, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>
          </div>

          <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
            <%= form.submit data: {disable_with: 'submitting...'}, class: "btn-green" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="hidden sm:block" aria-hidden="true">
  <div class="py-5">
    <div class="border-t border-gray-200"></div>
  </div>
</div>
